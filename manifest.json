{
    "name": "SYUNoti",
    "description" : "삼육대학교 공지사항 알림",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"    
    },
    "background" : {
        "scripts" : [
            "./bower_components/jQuery/dist/jQuery.min.js",
            "./bower_components/angular/angular.min.js",
            "./bower_components/bootstrap/dist/js/bootstrap.js",
            "./background.js"
        ],
        "persistent" : false
    },
    "permissions" : [
        "<all_urls>" , "storage" , "tabs"
    ]
  }

